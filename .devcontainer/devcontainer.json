// For format details, see https://aka.ms/devcontainer.json
{
	"name": "Arduino dev",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".",
		"args": {
			"USER_NAME": "vscode",
			"VARIANT": "debian-12",
			"ARDUINO_IDE_VERSION": "1.8.19", // See releases here (currently only 1.x is available): https://github.com/arduino/Arduino/releases
			"ARDUINO_CLI_VERSION": "1.0.3"		// See releases here: https://github.com/arduino/arduino-cli/releases
		}
	},

	// Set *default* container specific settings.json values on container create.
	"settings": { 
		"arduino.path": "/opt/arduino",
		"arduino.logLevel": "verbose",
		"arduino.useArduinoCli": true,
		"arduino.additionalUrls": [
			"http://arduino.esp8266.com/stable/package_esp8266com_index.json"
		]
	},

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-vscode.cpptools-extension-pack",
		"ms-vscode.vscode-serial-monitor",
		"vsciot-vscode.vscode-arduino",
		"yzhang.markdown-all-in-one"
	],

	"mounts": [
		"source=/dev/ttyUSB0,target=/dev/ttyUSB0,type=bind"
	],
	
	"runArgs": [
		"--privileged",
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],

	"initializeCommand": "printf DIALOUT_GID=$(getent group dialout | cut -d ':' -f 3)\\\\n > ${localWorkspaceFolder}/.devcontainer/envfile",

	"remoteUser": "vscode"
}
